<?xml version="1.0" encoding="UTF-8" ?>
<!--  SQL 맵퍼 파일은 xml이기 때문에 제일 먼저 xml 선언이 옵니다. -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hotel.asia.mybatis.mapper.MemberMapper">

	<select id="isId" resultType="member">
		select * from member where MEM_ID = #{id}
	</select>
	
	<insert id="insert">
		insert into member
		values
		(#{MEM_ID}, #{MEM_PASS}, #{MEM_NAME}, #{MEM_EMAIL}, #{MEM_PHONE}, #{MEM_POINT},#{AUTH})
	</insert>
	
	<update id="update">
		update member
		set MEM_NAME = #{MEM_NAME}, 
			MEM_EMAIL = #{MEM_EMAIL},
			MEM_PHONE = #{MEM_PHONE},
		where MEM_ID = #{MEM_ID}
	</update>
	
	<delete id="delete">
		delete from member where MEM_ID=#{MEM_ID}
	</delete>
	
	<select id="getSearchList" resultType="member">
		select * from (select b.*, rownum rnum
						from (select * from member
								where MEM_ID != 'admin'
								<include refid="search_"/>
								order by id) b
						where rownum &lt;= #{end}
				)
		where rnum &gt;= #{start} and rnum &lt;= #{end}
	</select>
	
	<select id="getSearchListCount" resultType="int">
		select count(*) from member
		where MEM_ID != 'admin'
		<include refid="search_"/>
	</select>
	
	<sql id="search_">
		<if test="search_field!= null">
			and 
			<choose>
				<when test="search_field=='MEM_ID'">MEM_ID</when>
				<when test="search_field=='MEM_NAME'">MEM_NAME</when>
			</choose>
		like #{search_word}
		</if>
	</sql>

	<!-- ==========[현능] 22-09-30 추가========== -->
	<select id="getMemberInfo" parameterType="String" resultType="member">
		select * from member where MEM_ID = #{id}
 	</select>
 	
 	<select id="phoneCheck" parameterType="int" resultType="member">
		select * from member where MEM_PHONE = #{phone}
 	</select>
</mapper>